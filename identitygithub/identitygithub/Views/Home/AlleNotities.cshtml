@model List<PluralsightUser>

@*<div class="row">
    <div class="col-xs-8 col-xs-offset-2">*@
        <h1 class="text-center">Alle Notities</h1>

        @if (Model.Count == 0)
        {

            <h2 class="center"> er zijn geen notities gevonden!</h2>
        }

        else
        {
            <div class="center">
                @foreach (var user in @Model)
                {

                    <button type="button" class="crmbutton" id = "@if (user == Model.FirstOrDefault()) {<text>test</text>}"}>

                        <div class="flex-container">
                            <div>ID:@user.Id</div>
                            <div>naam:@user.naam</div>
                            <div>aantal notities:@user.Notities.Count</div>
                            <div class="caret2"></div>
                        </div>

                    </button>

                    if (user==Model.FirstOrDefault()) {
                    <button id="crmbutton2">Show All</button>}


                    @foreach (var notitie in user.Notities)
                    {

                        <div class="shownotities">
                            <hr class="hr">
                            <span class="notitieinformatie">Datum: @notitie.Datum.ToShortDateString()</span>
                            <hr class="hr">
                            <span class="notitieinformatie">Onderwerp: @notitie.onderwerp</span>
                            <hr class="hr">

                            @notitie.Textarea

                            <br>
                            <br>
                        </div>


                    }

                }

            </div>
                }

            @*</div>
        </div>*@