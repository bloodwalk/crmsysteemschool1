@model Notitie

<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <h1 class="text-center">Notitie maken</h1>
        <form asp-action="EditNotities" method="post" class="form-horizontal">

            <div class="form-group">
                <label asp-for="onderwerp" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="onderwerp" class="form-control" />
                </div>
            </div>
            <input type="hidden" asp-for="User.Id" value="@ViewBag.Id" /> @*moet itct id worden*@
            <input type="hidden" asp-for="Id" value=" @ViewBag.notitieId" />
            <div class="form-group">
                <label asp-for="Textarea" class="col-sm-2"></label>
                <div class="col-sm-10">

                    <textarea asp-for="Textarea" class="form-control"></textarea>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            <div asp-validation-summary="All"></div>

        </form>
        <a href='@Url.Action("AlleNotities", "Home")'>
            <input type='button' value='Terug naar Notities' />
        </a>


    </div>
</div>